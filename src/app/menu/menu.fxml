<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:id="pane" fx:controller="app.menu.MenuViewController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          hgap="10" vgap="10" style="-fx-background-color: black;">

    <ImageView>
        <Image url="@../../resources/logo.png"/>
    </ImageView>

    <VBox spacing="10" alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0">

        <Button fx:id="play" text="Start Game" defaultButton="true"
                onAction="#handleButtonAction" prefWidth="100"/>

        <Button fx:id="config" text="Settings"
                onAction="#buttonAction" prefWidth="100"/>

        <Button fx:id="scores" text="High Scores"
                onAction="#buttonAction" prefWidth="100"/>
    </VBox>

</GridPane>
